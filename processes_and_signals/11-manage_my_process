#!/usr/bin/env bash
# This script manages the manage_my_process daemon

case "$1" in
    start)
        ./manage_my_process &
        echo $! > /var/run/my_process.pid 2>/dev/null
        echo "manage_my_process started"
        ;;
    stop)
        kill "$(cat /var/run/my_process.pid 2>/dev/null)" 2>/dev/null
        rm -f /var/run/my_process.pid 2>/dev/null
        echo "manage_my_process stopped"
        ;;
    restart)
        ./11-manage_my_process stop >/dev/null 2>&1
        sleep 1
        ./11-manage_my_process start >/dev/null 2>&1
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
