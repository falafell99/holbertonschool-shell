#!/usr/bin/env bash
# This script creates a PID file and handles multiple signals

# Disable exit on error
set +e

# Create PID file using full paths
/bin/touch /var/run/myscript.pid 2>/dev/null
/bin/echo $$ > /var/run/myscript.pid 2>/dev/null

# Signal handlers
trap 'echo "I hate the kill command"; /bin/rm -f /var/run/myscript.pid 2>/dev/null; exit' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT
trap '/bin/rm -f /var/run/myscript.pid 2>/dev/null; exit' SIGQUIT

# Keep running
while :
do
    echo "To infinity and beyond"
    /bin/sleep 3600
done
